# Audiobook TTS System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# ELEVENLABS API (Option A - Cloud-Based)
# ============================================
ELEVENLABS_API_KEY=your_api_key_here
HANNAH_VOICE_ID=your_hannah_voice_id_here
PRASAD_VOICE_ID=your_prasad_voice_id_here

# ============================================
# CUSTOM AI AGENT (Option B - Self-Hosted)
# ============================================
API_HOST=localhost
API_PORT=8000
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2

# ============================================
# OUTPUT SETTINGS
# ============================================
OUTPUT_FOLDER=output/audiobook
TEMP_FOLDER=output/temp
AUDIO_FORMAT=mp3
SAMPLE_RATE=48000
CHAPTERS_PER_BATCH=1

# ============================================
# PROCESSING
# ============================================
MAX_CONCURRENT_REQUESTS=3
RATE_LIMIT_DELAY=0.5